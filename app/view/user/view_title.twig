{% extends 'user/layout.twig' %}

{% block content %}
<div class="row">
    <div class="col-12">
        <div class="card card-info">
        <form action="{{ path_for('title') }}" method="post" autocomplete="off" role="form" class="form-horizontal">
                <div class="card-body">
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="projectTitle">
                            Project Title
                        </label>
                        <div class="col-sm-9">
                            <input class="form-control" id="projectTitle" placeholder="Project Title" name="projectTitle" type="text" value="{{projectTitle}}">
                            <div class="invalid-feedback">Title should not be empty!</div>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-2"></div>
                        <div class="col-sm-3">
                            <button class="btn btn-cyan" type="submit" id="submitBtn">Update</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}

{% block scriptcontent %}
<script>
$(document).ready(function() {
    $("#submitBtn").click(function(e) {
        let projectTitle = $("#projectTitle").val();

        if (projectTitle === '') {
            $('#projectTitle').addClass('is-invalid');
            return false;
        }
    })
});
</script>
{% endblock %}
