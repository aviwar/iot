{% extends 'user/layout.twig' %}

{% block content %}
<div class="row">
    <div class="col-12">
        <div class="card card-info">
        <form action="{{ path_for('mobile') }}" method="post" autocomplete="off" role="form" class="form-horizontal">
                <div class="card-body">
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="mobile">
                            Mobile Number
                        </label>
                        <div class="col-sm-9">
                            <input class="form-control" id="mobile" placeholder="Mobile Number" name="mobile" type="text" value="{{mobileNumber}}">
                            <div class="invalid-feedback">Invalid Mobile Number!</div>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-2"></div>
                        <div class="col-sm-3">
                            <button class="btn btn-primary" type="submit" id="submitBtn">Update</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}

{% block scriptcontent %}
<script>
$(document).ready(function() {
    $("#submitBtn").click(function(e) {
        let mobile = $("#mobile").val();

        if (mobile === '' || /^\d{10}$/.test(mobile) === false) {
            $('#mobile').addClass('is-invalid');
            return false;
        }
    })
});
</script>
{% endblock %}
