<aside class="main-sidebar sidebar-light-info elevation-4">
    <a class="brand-link" href="{{ path_for('home') }}">
        <img src="assets/images/logo.png" alt="Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
        <span class="brand-text font-weight-light">{{ appName }}</span>
    </a>

    <div class="sidebar">
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-accordion="false" data-widget="treeview" role="menu">

                {% for item in sideMenu %}

                {% set activeMenuClass = item['isActivePage'] ? 'active' : '' %}

                {% set hasSubMenu = item['subMenu'] is not empty ? true : false %}
                {% set hasSubMenuClass = hasSubMenu ? 'has-treeview' : '' %}
                {% set activeSubmenuClass = (hasSubMenu and item['isActivePage']) ? 'menu-open' : 'menu-close' %}

                <li class="nav-item {{hasSubMenuClass}} {{activeSubmenuClass}}">
                    <a class="nav-link {{activeMenuClass}}" href="{{ item['menu_url'] }}">
                        <i class="nav-icon {{item.menu_icon}}"></i>
                        <p>
                            {{item.menu_name}}

                            {% if hasSubMenu %}
                            <i class="right fas fa-angle-left"></i>
                            {% endif %}
                        </p>

                    </a>

                    {% if hasSubMenu %}
                    <ul class="nav nav-treeview">
                        {% for subItem in item['subMenu'] %}

                        {% set activeSubMenuClass = subItem['isActivePage'] ? 'active' : '' %}

                        <li class="nav-item">
                            <a class="nav-link {{activeSubMenuClass}}" href="{{ subItem['submenu_url'] }}">
                                <i class="nav-icon {{subItem.submenu_icon}}"></i>
                                <p>{{subItem.submenu_name}}</p>
                            </a>
                        </li>

                        {% endfor %}
                    </ul>
                    {% endif %}
                </li>

                {% endfor %}
            </ul>
        </nav>
    </div>
</aside>