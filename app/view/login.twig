{% extends 'layout.twig' %}

{% block stylecontent %}
<link rel="stylesheet" href="assets/css/login.css">
{% endblock %}

{% block content %}
<section class="ud-login">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="ud-login-wrapper">

                    {% include 'flash.twig' %}

                    <form action="{{ path_for('login') }}" method="POST" autocomplete="off" class="ud-login-form">
                        <div class="ud-form-group">
                            <input class="{{errors.username ? 'is-invalid' : ''}}" id="username" name="username"
                                placeholder="Username" type="username" value="{{ old.username }}">
                            {% if errors.username %}
                            <div class="invalid-feedback">
                                {{ errors.username | first }}
                            </div>
                            {% endif %}
                        </div>
                        <div class="ud-form-group">
                            <input class="{{errors.password ? 'is-invalid' : ''}}" id="password" name="password"
                                placeholder="Password" type="password">
                            {% if errors.password %}
                            <div class="invalid-feedback">
                                {{ errors.password | first }}
                            </div>
                            {% endif %}
                        </div>
                        <div class="ud-form-group">
                            <button type="submit" class="ud-main-btn w-100">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}