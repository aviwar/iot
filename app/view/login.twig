{% extends 'layout.twig' %}

{% block stylecontent %}
<style>
body {
    padding-top: 5rem;
}
</style>
{% endblock %}

{% block content %}
    <aside class="form-signin col-sm-4">
        <div class="card">
            <article class="card-body">
                <h4 class="card-title mb-4 mt-1">
                    Sign in
                </h4>

                {% include 'flash.twig' %}

                <form action="{{ path_for('login') }}" method="POST" role="form" autocomplete="off">
                    <div class="form-group">
                        <label for="username">Username</label>
                        <input class="form-control {{errors.username ? 'is-invalid' : ''}}" id="username" name="username" placeholder="Username" type="username" value="{{ old.username }}">
                        {% if errors.username %}
                            <div class="invalid-feedback">
                                {{ errors.username | first }}
                            </div>
                        {% endif %}
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input class="form-control {{errors.password ? 'is-invalid' : ''}}" id="password" name="password" placeholder="Password" type="password">
                        {% if errors.password %}
                            <div class="invalid-feedback">
                                {{ errors.password | first }}
                            </div>
                        {% endif %}
                    </div>
                    <div class="form-group">
                        <button class="btn btn-cyan btn-block" type="submit">
                            Login
                        </button>
                    </div>
                </form>
            </article>
        </div>
    </aside>
{% endblock%}
